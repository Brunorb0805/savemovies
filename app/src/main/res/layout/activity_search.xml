        <RelativeLayout
            android:id="@+id/alertNotFoundRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:visibility="@{presenter.messageNotFoundVisibility}">

            <include layout="@layout/fragment_not_found" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alertNoInternetRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:visibility="@{presenter.messageNotInternetVisibility}">

            <include layout="@layout/fragment_no_internet" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/moviesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
